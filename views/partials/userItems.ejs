<div>
    <hr/> 
    <h2>Your Items</h2>
    <div class="card-group">
        <% const items = locals.user.items %>
        <% items.forEach(item => { %>
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title"> <%= item.name %></h2>
                    <h3 class="card-text">Item ID : <%= item.id %></h3>
                </div>
                <div class="card-footer text-muted">Price: $<%= item.price %></div>
            </div>
        <% }) %>
    </div>
</div>